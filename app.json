{
  "name": "content-publisher",
  "scripts": {
    "postdeploy": "rake db:migrate db:seed"
  },
  "env": {
    "GDS_SSO_STRATEGY": {
      "required": true,
      "value": "mock"
    },
    "GOVUK_APP_DOMAIN": {
      "required": true,
      "value": "integration.publishing.service.gov.uk"
    },
    "GOVUK_WEBSITE_ROOT": {
      "required": true,
      "value": "http://localhost"
    },
    "JWT_AUTH_SECRET": {
      "generator": "secret"
    },
    "PLEK_SERVICE_PUBLISHING_API_URI": {
      "required": true,
      "value": "http://localhost"
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
