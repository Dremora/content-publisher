<p>
  <%= render "govuk_publishing_components/components/label", {
    text: t("formats.associations.#{schema.id}.label"),
    html_for: "associations[#{schema.id}]"
  } %>

  <% options = LinkablesService.new(schema.document_type).select_options %>

  <%= select_tag "associations[#{schema.id}][]",
    options_for_select(options, associations[schema.id]),
    class: "govuk-select",
    multiple: true,
    style: "height: 200px" %>
</p>
