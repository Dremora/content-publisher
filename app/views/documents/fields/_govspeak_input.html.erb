<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render "components/markdown-editor", {
      label: {
        text: schema.label
      },
      textarea: {
        data: {
          "contextual-guidance": "document-contents-guidance"
        },
        id: "govspeak-editor",
        name: "document[contents][#{schema.id}]",
        value: document.contents[schema.id],
        rows: 25,
        spellcheck: "false"
      }
    } %>
  </div>

  <% if document.document_type_schema.guidance_for(schema.id) %>
    <div class="govuk-grid-column-one-third">
      <%= render "components/contextual-guidance", {
        id: "document-contents-guidance",
        title: document.document_type_schema.guidance_for(schema.id).title
      } do %>
        <p class="govuk-body"><%= document.document_type_schema.guidance_for(schema.id).body %></p>

        <h3 class="govuk-heading-s"><%= t("pages.documents.edit.fields.govspeak.title") %></h3>
        <p class="govuk-body">
          <a href="https://www.gov.uk/guidance/how-to-publish-on-gov-uk/markdown" class="govuk-link"><%= t("pages.documents.edit.fields.govspeak.guidance") %></a>
        </p>

        <%= render "components/markdown-toolbar", {
          html_for: "govspeak-editor"
        } %>
      <% end %>
    </div>
  <% end %>
</div>
